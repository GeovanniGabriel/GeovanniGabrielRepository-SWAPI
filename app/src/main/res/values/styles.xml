<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/toolbar_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WhiteText14">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_14</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MenuSubtitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_12</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:alpha">0.7</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:background">@color/colorGray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="LoaderSubtitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_14</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ProgressLoader">
        <item name="colorAccent">@color/slate_grey_two</item>
    </style>

    <style name="AlertDialogLightStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/colorBottom</item>
        <item name="colorAccent">@color/colorBottom</item>
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:windowTitleStyle">@style/AlertDialogTitleStyle</item>
    </style>

    <style name="AlertDialogTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_20</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
