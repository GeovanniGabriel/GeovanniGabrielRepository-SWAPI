<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/toolbar_title_size</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:fontFamily">sans-serif-bold</item>-->
    </style>

    <style name="WhiteText14">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_14</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MenuSubtitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_12</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:alpha">0.7</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:background">@color/colorGray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

</resources>
